// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  name     String
  lastName String
  email    String @unique
  password String

  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  UserBoard UserBoard[]

  @@map("users")
}

model Board {
  id String @id @default(uuid())

  name String

  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  UserBoard UserBoard[]
  BoardCard BoardCard[]

  @@map("boards")
}

model Card {
  id String @id @default(uuid())

  name        String
  description String?

  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  BoardCard BoardCard[]

  @@map("cards")
}

model UserBoard {
  id String @id @default(uuid())

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  board    Board  @relation(fields: [board_id], references: [id])
  board_id String

  user_level Int

  @@map("usersboards")
}

model BoardCard {
  id String @id @default(uuid())

  board    Board  @relation(fields: [board_id], references: [id])
  board_id String

  card    Card   @relation(fields: [card_id], references: [id])
  card_id String

  @@map("boardscards")
}
